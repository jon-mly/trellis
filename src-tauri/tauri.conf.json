{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Trellis",
  "version": "0.1.0",
  "identifier": "com.trellis.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3100",
    "beforeDevCommand": "npm run vite:dev",
    "beforeBuildCommand": "npm run vite:build"
  },
  "app": {
    "windows": [
      {
        "title": "Trellis",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
